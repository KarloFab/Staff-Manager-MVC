@model IEnumerable<Kupac>

@{
    ViewBag.Title = "Kupci";
}

@section Scripts{
    <script>
        $("#tablica").DataTable({
            "iDisplayLength": 3,
            "lengthMenu": [[3, 5, 10, -1], [3, 5, 10, "All"]]
        });
    </script>
}


@if (User.IsInRole("Administrator"))
{
<p style="float:right;display:inline;margin-top:30px;">
    @Html.ActionLink("Dodaj", "CreateKupac", null, htmlAttributes: new { @class = "btn btn-primary" })
</p>
}
<h2 style="border-bottom:1px solid white;font-size:50px;font-weight:100;
padding-bottom:10px;color:white;">
    Kupci
</h2>


<br>
<div class="row" style="height:700px;">

    <table id="tablica" >
        <thead style="font-size:16px;color:white;">
            <tr>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var kupac in Model)
            {
                <tr>
                    <td>
                        @Html.Partial("_Kupac", kupac);
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>